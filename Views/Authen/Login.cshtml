@{
    ViewData["Title"] = "Home";
    Layout = "_UnLoginLayout";
}
@model CourseManagement.Models.User;
<section class="section main-banner" id="top" data-section="section1">
    <video autoplay muted loop id="bg-video">
        <source src="~/new/assets/images/course-video.mp4" type="video/mp4" />
    </video>
    <div class="video-overlay header-text ">
        <div class="caption d-flex justify-content-center">
            <div class="login-form">
                <div class="text-center">
                    <h3 class="text-white fw-bold"><span class="text-primary">Welcome</span> Back</h3>
                </div>
                <form asp-controller="Authen" asp-action="Login" method="post">
                    <div class="mb-3 input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" asp-for="email" class="form-control" placeholder="Email or phone" required>
                    </div>
                    <div class="mb-4 input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input type="password" name="password" asp-for="password" class="form-control" placeholder="Password" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 text-white">Login</button>
                </form>

                <div class="text-center text-light">
                    Don't have an account? <a asp-controller="Authen" asp-action="SignUp">Sign up</a>
                </div>
            </div>
        </div>
    </div>

</section>
