@{
    ViewData["PageName"] = "Login";
    Layout = "_UnLoginLayout";
}
@model CourseManagement.Models.User;
<section class="section main-banner" id="top" data-section="section1">
    <video autoplay muted loop id="bg-video">
        <source src="~/new/assets/images/course-video.mp4" type="video/mp4" />
    </video>
    <div class="video-overlay header-text ">
        <div class="caption d-flex justify-content-center">
            <div class="login-form">
                <div class="text-center">
                    <h3 class="text-white fw-bold" style="margin: 30px"><span class="text-primary" style="color: #f5a425 !important;">Welcome</span> Back</h3>
                </div>
                <form asp-controller="Authen" asp-action="Login" method="post">
                    <div class="mb-3 input-group" style="margin-top: 30px">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input type="text" asp-for="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="mb-4 input-group" style="margin-top: 30px">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input type="password" name="password" asp-for="password" class="form-control" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-warning w-100 text-white text-light fw-bold" style="margin-top: 30px"><i class="fa-solid fa-right-to-bracket"></i> Login</button>
                </form>

                <div class="text-center text-light fw-bold" style="margin: 30px">
                    Don't have an account? <a asp-controller="Authen" asp-action="SignUp">Sign up</a>
                </div>
                <div class="text-center text-light fw-bold" style="margin: 30px">
                    Forgot password? <a asp-controller="Authen" asp-action="EmailVerifyForgotPassword">Get it back</a>
                </div>
            </div>
        </div>
    </div>

</section>
