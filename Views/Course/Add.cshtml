@model CourseManagement.Models.Course
@using System.Security.Claims

@{
	ViewData["PageName"] = "Add New Course";
}


<div class="card">
	<div class="card-header border-0 p-3">
		<h4 class="heading mb-0">Add New Course</h4>
	</div>
	<div class="card-body p-0">
		<div class="table-responsive basic-tbl">
			<div class="container-fluid">

				<form asp-controller="Course" asp-action="Add" method="post" style="max-width: 500px; margin: 0 auto;">
					<input type="hidden" name="teacherId" value="@User.FindFirstValue("TeacherId")" />

					<div class="border">
						<div class="form-group row m-2">
							<label class="col-sm-4 col-form-label">Course Subject</label>
							<div class="col-sm-8">
								<input asp-for="courseSubject" class="form-control" required minlength="2" />
								<span asp-validation-for="courseSubject" class="text-danger"></span>
							</div>
						</div>

						<div class="form-group row m-2">
							<label class="col-sm-4 col-form-label">Course Code</label>
							<div class="col-sm-8">
								<input asp-for="courseCode" class="form-control" required pattern="[0-9]{3}" />
								<span asp-validation-for="courseCode" class="text-danger"></span>
							</div>
						</div>

						<div class="form-group row m-2">
							<label class="col-sm-4 col-form-label">Course Tuition Fee</label>
							<div class="col-sm-8">
								<input asp-for="TuitionFee" class="form-control" required pattern="[0-9]{1,}" />
								<span asp-validation-for="TuitionFee" class="text-danger"></span>
							</div>
						</div>

						<div class="form-group row m-2">
							<label class="col-sm-4 col-form-label">Course Name</label>
							<div class="col-sm-8">
								<input asp-for="courseName" class="form-control" required minlength="5" maxlength="50" />
								<span asp-validation-for="courseName" class="text-danger"></span>
							</div>
						</div>

						<div class="text-center">
							<button type="submit" class="btn btn-primary m-2">Add</button>
							<a asp-controller="Course" asp-action="Index" class="btn btn-secondary m-2">Cancel</a>
						</div>
					</div>
				</form>

			</div>
		</div>
	</div>
</div>
