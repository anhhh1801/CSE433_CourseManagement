@{
    var course = ViewBag.course;

    ViewData["PageName"] = $"{course.courseName} - Students";
}
@model List<CourseManagement.Models.Enrollment>

<div class="card">
    <div class="card-header p-3 table-title d-flex justify-content-between align-items-center mb-3">
        <h4 class="heading mb-0">Manage Student Enrolled in <span class="text-secondary fw-bold text-decoration-underline">@course?.courseName</span></h4>

        <a asp-controller="Course" asp-action="Index" class="btn btn-warning text-sencondary fw-bold">
            <i class="fas fa-arrow-left text-secondary"></i> Go Back
        </a>
    </div>

    <div class="studentcard">
        <div class="card-body p-0">
            <div class="row">

                <div class="table-responsive basic-tbl">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>Student ID</th>
                                <th>Full Name</th>
                                <th>Parent Number</th>
                                <th>Entry Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var index = 1;
                            }
                            @if (Model != null && Model.Count > 0)
                            {
                                foreach (var enrollment in Model)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>@enrollment.Student.studentName</td>
                                        <td>@enrollment.Student.parentNumber</td>
                                        <td>@enrollment.enrollmentDate.ToString("dd-MM-yyyy")</td>
                                        <td>
                                            <form asp-controller="Course"
                                                  asp-action="RemoveStudent"
                                                  method="post"
                                                  asp-route-enrollId="@enrollment.enrollmentId"
                                                  asp-route-courseId="@course.courseId"
                                                  onsubmit="return confirm('Are you sure you want to remove this student from the course?');">
                                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                                index++;
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">No students enrolled in this course.</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="text-center m-3">
                        <a class="btn btn-primary"
                           asp-controller="Course"
                           asp-action="Enroll"
                           asp-route-id="@course.courseId">
                            Add New Student
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

