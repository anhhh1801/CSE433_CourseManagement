@model List<CourseManagement.Models.Enrollment>;
@{
    var course = ViewBag.Course as CourseManagement.Models.Course;
    ViewData["Title"] = $"{course?.courseName}'s Students";
}


<div class="card">
    <div class="card-header p-3 table-title d-flex justify-content-between align-items-center mb-3">
        <h4 class="heading mb-0">Students Enrolled in <span class="text-secondary fw-bold text-decoration-underline">@course?.courseName</span></h4>
        <a asp-controller="Course" asp-action="List" class="btn btn-warning text-sencondary fw-bold">
            <i class="fas fa-arrow-left text-secondary"></i> Go Back
        </a>
    </div>

    <div class="studentcard">
        <div class="card-body p-0">
            <div class="container-fluid">
                <div class="row">
                    @foreach (var enrollment in Model)
                    {
                        var student = enrollment.Student;
                        var finalScore = enrollment.FinalScore;
                        string badgeClass = finalScore switch
                        {
                            null => "bg-secondary",
                            >= 8 => "bg-success",
                            >= 6.5 => "bg-info",
                            >= 5 => "bg-warning",
                            >= 3.5 => "bg-danger",
                            _ => "bg-dark"
                        };
                        <div class="col-md-3">
                            <div class="studentcard">
                                <img src="@student.Avatar" class="card-img-top"
                                     style="height: 300px; object-fit: cover;" />
                                <div class="card-body border-primary">
                                    <h5 class="card-title table-title">@student.studentName </h5>
                                    <div class="d-flex gap-2 scoreshow">
                                        <div class="d-flex flex-column flex-fill align-items-center text-secondary">
                                            <p>Progress</p>
                                            <p>@(enrollment.ProgressScore?.ToString("0.0") ?? "-")</p>
                                        </div>
                                        <div class="d-flex flex-column flex-fill align-items-center text-secondary">
                                            <p>Test</p>
                                            <p>@(enrollment.TestScore?.ToString("0.0") ?? "-")</p>
                                        </div>
                                        <div class="d-flex flex-column flex-fill align-items-center text-secondary">
                                            <p>Final</p>
                                            <p>@(enrollment.FinalScore?.ToString("0.0") ?? "-")</p>
                                        </div>
                                        <div class="d-flex flex-column flex-fill align-items-center text-secondary">
                                            <p>Performance</p>
                                            <p class="badge @badgeClass" style="text">
                                                @(@enrollment.Performance)
                                            </p>
                                        </div>

                                    </div>
                                    @{
                                        var modalId = $"scoreModal-{student.studentId}";
                                    }
                                    <div class=" d-flex justify-content-between text-center gap-4   ">
                                        <button type="button" class="btn btn-primary btn-sm flex-fill text-center" data-bs-toggle="modal" data-bs-target="#@modalId">
                                            Update Scores
                                        </button>

                                    </div>

                                    <div class="modal fade" id="@modalId">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form asp-controller="Course" asp-action="UpdateScores" method="post">
                                                    <input type="hidden" name="CourseId" value="@course?.courseId" />
                                                    <input type="hidden" name="StudentId" value="@student?.studentId" />
                                                    <input type="hidden" name="EnrollmentId" value="@enrollment.enrollmentId" />


                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Update Scores for @student?.studentName</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label>Progress Score (0–10)</label>
                                                            <input type="number" asp-for="@enrollment.ProgressScore" name="ProgressScore" class="form-control" required min="0" max="10" step="0.1" value="@enrollment.ProgressScore" />
                                                        </div>
                                                        <div class="mb-3">
                                                            <label>Test Score (0–10)</label>
                                                            <input type="number" asp-for="@enrollment.TestScore" name="TestScore" class="form-control" required min="0" max="10" step="0.1" value="@enrollment.TestScore" />
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
