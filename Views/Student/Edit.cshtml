@model CourseManagement.Models.Student
@{
    ViewData["PageName"] = $"Update Student - {Model.studentName}";
}

<div class="container-fluid">
    <div class="col-xl-12">
        <div class="card">
            <div class="border-0 p-3">
                <h4 class="heading mb-0">Update Student - @Model.studentName</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="Student" method="post" style="max-width: 400px; margin: 0 auto">
                    <input type="hidden" asp-for="TeacherId" />
                    <input type="hidden" asp-for="studentId" />

                    <div class="border p-3">
                        <div class="form-group row mb-3">
                            <label class="col-sm-4 col-form-label">Full Name</label>
                            <div class="col-sm-8">
                                <input asp-for="studentName" class="form-control" required minlength="4" />
                                <span asp-validation-for="studentName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label class="col-sm-4 col-form-label">Entry Date</label>
                            <div class="col-sm-8">
                                <input asp-for="EntryDate" type="date" class="form-control" required />
                                <span asp-validation-for="EntryDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label class="col-sm-4 col-form-label">Parent Number</label>
                            <div class="col-sm-8">
                                <input asp-for="parentNumber" class="form-control" required maxlength="10" pattern="[0-9]{10}" />
                                <span asp-validation-for="parentNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-warning m-2 fw-bold">Update</button>
                            <a asp-controller="Student" asp-action="Index" class="btn btn-secondary m-2 fw-bold">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
