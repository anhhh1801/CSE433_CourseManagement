@model CourseManagement.Models.Student
@using System.Security.Claims
@{
    ViewData["PageName"] = "Add Student";
    var teacherId = User.FindFirstValue("TeacherId");
}


        <div class="card">
            <div class="border-0 p-3">
                <h4 class="heading mb-0">Add a Student</h4>
            </div>
            <div class="card-body">
                <form asp-action="Add" asp-controller="Student" method="post" style="max-width: 400px; margin: 0 auto">
                    <input type="hidden" name="Teacher" value="@teacherId" />

                    <div class="border p-3">
                        <div class="form-group row mb-3">
                            <label class="col-sm-4 col-form-label">Full Name</label>
                            <div class="col-sm-8">
                                <input asp-for="studentName" class="form-control" required minlength="4" />
                                <span asp-validation-for="studentName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label class="col-sm-4 col-form-label">Entry Date</label>
                            <div class="col-sm-8">
                                <input asp-for="EntryDate" type="date" class="form-control" required />
                                <span asp-validation-for="EntryDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label class="col-sm-4 col-form-label">Parent Number</label>
                            <div class="col-sm-8">
                                <input asp-for="parentNumber" class="form-control" required maxlength="10" pattern="[0-9]{10}" />
                                <span asp-validation-for="parentNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="text-center">
                    <button type="submit" class="btn btn-warning m-2 fw-bold">Add</button>
                    <a asp-controller="Student" asp-action="Index" class="btn btn-secondary m-2 fw-bold ">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

@section Scripts {
    <script>
        window.onload = function () {
            const entryDateInput = document.querySelector('input[name="EntryDate"]');
            if (entryDateInput && !entryDateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                entryDateInput.value = today;
            }
        };
    </script>
}
