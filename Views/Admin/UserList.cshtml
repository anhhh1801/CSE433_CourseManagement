@model List<CourseManagement.Models.User>
@{
    ViewData["PageName"] = "User Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
	var listUsers = ViewBag.Users;
    var listAdmin = ViewBag.Admins;
}


