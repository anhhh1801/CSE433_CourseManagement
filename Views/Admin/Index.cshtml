@model CourseManagement.Models.User;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var listStudents = ViewBag.Students;
    var listCourses = ViewBag.Courses;
    var listUsers = ViewBag.Users;
    var listAdmins = ViewBag.Admins;
}


<div class="card">
    <div class=" border-0 p-3">
        <div>
            <h1 class="fw-bold text-primary">Welcome to Home Tutor Website</h1>
            <h2 class="heading mb-0 text-secondary">Hello <strong>@Model.teacherName</strong>, have a great day!</h2>
            <p>Today is: @DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
        </div>
    </div>

    <div class="card-body">
        <div class="row align-items-start ">
            <div class="col-md-4">
                <div class="teacher-profile" style="padding: 20px;">
                    <h2 class="text-center table-title" style="margin-top: 20px; margin-bottom: 10px;">Admin's Profile</h2>
                    <div class="justify-content-center">
                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <img src="@Model.avatar" alt="Profile picture"
                                 class="img-thumbnail" style="width: 250px; height: 250px; object-fit: cover; margin-bottom: 20px;">
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadAvatarModalstyle" style=" margin-right: 20px;">
                                <i class="fa-solid fa-image"></i>
                            </button>

                            <div class="modal fade" id="uploadAvatarModal">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form asp-controller="Admin" asp-action="UploadAvatar" asp-route-id="@Model.teacherId" method="post" enctype="multipart/form-data">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Upload Avatar</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label class="form-label">Choose Image</label>
                                                    <input type="file" class="form-control" name="avatar" accept="image/*" required />
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary">Upload</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="p-3">
                            <h5><strong>Name: </strong>@Model.teacherName</h5>
                            <h5><strong>Email:</strong> @Model.email</h5>
                            <h5><strong>Phone Number:</strong> @Model.phoneNumber</h5>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Top Student Table -->
            <div class="col-md-8 teacher-profile">
                <div class="row admin-items">
                    <div class="col-6 text-center">
                        <a asp-action="StudentList" asp-controller="Admin">
                            <div class="admin-button">
                                <h4>Total Students</h4>
                                <p class="fs-2 fw-bold">@listStudents.Count</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-6 text-center">
                        <a asp-action="CourseList" asp-controller="Admin">
                            <div class=" admin-button">
                                <h4>Total Courses</h4>
                                <p class="fs-2 fw-bold">@listCourses.Count</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-6 text-center">
                        <a asp-action="UserList" asp-controller="Admin">
                            <div class=" admin-button">
                                <h4>Total Admins</h4>
                                <p class="fs-2 fw-bold">@listAdmins.Count</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-6 text-center">
                        <a asp-action="UserList" asp-controller="Admin">
                            <div class="admin-button">
                                <h4>Total Users</h4>
                                <p class="fs-2 fw-bold">@listUsers.Count</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

