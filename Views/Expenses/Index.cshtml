        <td>@expense.description</td>
        <td>@expense.amount.ToString("N2")</td>
        <td>@expense.createdAt.ToString("dd/MM/yyyy HH:mm")</td>
        <td>@expense.course?.courseName</td>
        <td>
            <!-- Nút mở modal sửa -->
            <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editExpenseModal_@expense.expenseId">
                Edit
            </button>

            <!-- Form xóa -->
